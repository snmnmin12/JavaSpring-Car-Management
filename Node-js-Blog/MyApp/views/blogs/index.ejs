
<% include ../partials/header %>

    <div class="ui main text container">
        <div class="ui huge header">Welcome to My Blog</div>
        
        <% if (blogs.length > 0)  { %>
        
        <div class="ui top  attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){ %>
                    <div class="item">
                        <div class="image">
                            <img src="<%= blog.image %>" >
                        </div>
                        <div class="content">
                             <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                             <div class="meta">
                                 <span><%= blog.created.toDateString() %></span>
                             </div>
                             <div class="description">
                                 <p><%- blog.body.substring(0, 200) %>...</p>
                             </div>
                             <div class="extra">
                                 <a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
                                     Read More
                                     <i class="right chevron icon"></i>
                                 </a>
                             </div>
                        </div>
                    </div>
                <% }) %>
                </div>
                
                <br>
                 <div class="ui divided items">
                <!--pagination-->
                <%  var active1 = "";
                    var active2 = "";
                    if (!page || page <= 1) {
                            active1 ="disabled" ;
                        } else if (page  >=  maxp) {
                              active2 = "disabled"
                }%>
                      
                <a href="/blogs?page=<%=page-1%>" class="<%=active1%>">Previous</a>
                <span class="pull-right"><a href="/blogs?page=<%=page+1%>" class="<%=active2%>">Next</a></span>
            </div>
        </div>
    </div>
<% } %>

<% include ../partials/footer %>